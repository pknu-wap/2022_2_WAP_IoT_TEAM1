<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_200"
    tools:context=".EmergencyActivity"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:src="@drawable/message" />

    <TextView
            android:id="@+id/EmergencyTitle"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editsms"
            android:layout_alignRight="@+id/editsms"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="11dp"

            android:layout_marginRight="11dp"
            android:gravity="center"
            android:text="아래 내용을 전송하겠습니다."
            android:textSize="28sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="버전정보" />

        <Button
            android:id="@+id/btPerSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전송허가" />

        <Button
            android:id="@+id/btPerRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="읽기허가" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btRegistScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록리스트" />

        <Button
            android:id="@+id/btStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="서비스시작" />

        <Button
            android:id="@+id/btStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="서비스종료" />

        <Button
            android:id="@+id/btSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="문자전송" />

    </LinearLayout>

    <EditText
        android:id="@+id/editphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="010-7353-7548" />

    <EditText
        android:id="@+id/editsms"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:inputType="textPersonName"
        android:text="관심단계:주의\n상태확인바랍니다.\n홍길동\n010-1234-5678\n부산광역시 00구 00동\n고혈압, 거동 불편" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:text="TextView"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
